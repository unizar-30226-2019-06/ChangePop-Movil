<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/fondo_chat"
        android:layout_width="match_parent"
        android:id="@+id/n_chat_container"
        android:layout_height="match_parent"
        tools:context=".ChatActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/m_Chat_cerradoOabierto"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#ff0000"
                android:background="@color/greyBack"
                android:text="Cerrado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <LinearLayout
                android:id="@+id/n_chat_header"
                android:orientation="horizontal"
                android:gravity="right"
                android:background="@drawable/rounded_grey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/m_Chat_person_image"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_gravity="center"
                        android:src="@drawable/add_picture_image"
                        android:focusable="false"/>
                <LinearLayout
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <TextView
                            android:id="@+id/m_Chat_person_name"
                            android:text="Username"
                            android:layout_width="wrap_content"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <TextView
                            android:id="@+id/m_Chat_product_name"
                            android:text="Nombre del producto"
                            android:layout_width="wrap_content"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"/>

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_gravity="center"
                                android:layout_height="wrap_content"
                                android:text="Oferta actual: "/>
                        <TextView
                                android:id="@+id/m_Chat_price"
                                android:text="100"
                                android:layout_width="wrap_content"
                                android:layout_gravity="center"
                                android:layout_height="wrap_content"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_gravity="center"
                                android:layout_height="wrap_content"
                                android:text=" â‚¬"/>
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                        android:id="@+id/m_Chat_product_image"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_marginBottom="3dp"
                        android:background="@drawable/layout_bg"
                        app:srcCompat="@drawable/ic_image_black_24dp"
                        android:contentDescription="Product image"/>
            </LinearLayout>
        </LinearLayout>
        <android.support.v4.widget.SwipeRefreshLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/m_swipeRefreshView_chat"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="60dp"
                android:layout_height="wrap_content"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:layout_width="wrap_content">
            <android.support.v7.widget.RecyclerView
                    android:id="@+id/m_recyclerView_chat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scrollbars="vertical" />
        </android.support.v4.widget.SwipeRefreshLayout>
    </LinearLayout>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:orientation="horizontal">
        <android.support.design.widget.TextInputEditText
                android:id="@+id/m_Chat_editText_message"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/rounded_white"
                android:textColorHint="@color/colorPrimary"
                android:layout_marginRight="8dp"
                android:hint="Escribe un mensaje"
                android:padding="8dp" />
        <android.support.design.widget.FloatingActionButton
                android:id="@+id/m_Chat_send_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@id/m_Chat_editText_message"
                android:layout_toRightOf="@id/m_Chat_editText_message"
                android:tint="@android:color/background_light"
                app:fabSize="mini"
                app:srcCompat="@drawable/ic_send_black_24dp"
                app:backgroundTint="@color/colorPrimary"
                android:layout_alignParentTop="true"/>
    </RelativeLayout>
</FrameLayout>