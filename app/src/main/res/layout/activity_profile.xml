<?xml version="1.0" encoding="utf-8"?>

<!-- https://guides.codepath.com/android/google-play-style-tabs-using-tablayout -->

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ProfileActivity"
        android:background="#d2d2d2">


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="0dp"
                    android:paddingStart="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_weight="0.7">
                <TextView
                        android:text="@string/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/profile_username"
                        android:layout_margin="2dp" android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textSize="24sp" android:textStyle="bold"/>
                <TextView
                        android:text="@string/user_start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView12" android:layout_margin="2dp"
                        android:textAppearance="@style/TextAppearance.AppCompat" android:textSize="18sp"/>
                <TextView
                        android:text="@string/user_sales"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView13" android:layout_margin="2dp"
                        android:textAppearance="@style/TextAppearance.AppCompat" android:textSize="18sp"/>
                <TextView
                        android:text="@string/user_adress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView2" android:layout_margin="2dp"
                        android:textAppearance="@style/TextAppearance.AppCompat" android:textSize="18sp"
                        android:textColor="@color/colorPrimaryDark"/>
            </LinearLayout>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@mipmap/ic_launcher_round"
                    android:id="@+id/imageView3"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_weight="0.3"
                    android:layout_gravity="center_vertical"

            />
        </LinearLayout>
        <android.support.design.widget.TabLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" app:tabTextColor="@color/colorPrimary"
                app:tabIndicatorColor="@color/colorPrimaryDark">

            <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/user_tab1"/>
            <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/user_tab2"/>
        </android.support.design.widget.TabLayout>
        <android.support.v4.view.ViewPager
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

    </LinearLayout>


</RelativeLayout>