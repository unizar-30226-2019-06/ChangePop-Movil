<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/greyBack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.347">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:gravity="center_vertical|center_horizontal|center">

        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/m_crear_coverCircleImageView"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"
                android:src="@drawable/add_picture_image" android:focusable="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:text="Perfil del Usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Title"
                android:textColor="@color/colorPrimary" android:textAllCaps="false"/>

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView
                    android:text="Nombre de usuario" android:layout_gravity="center"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                    android:textColor="@color/colorPrimary"/>
            <EditText
                    android:id="@+id/m_ProfileData_username" android:hint="Nombre de Usuario"
                    android:layout_width="match_parent" android:layout_height="40dp" android:layout_marginLeft="2dp"
                    android:background="@drawable/trans_rounded_white" android:layout_marginStart="2dp"
                    android:inputType="textPersonName" android:textSize="14sp"
                    android:paddingEnd="10dp" android:paddingStart="10dp"
            />
        </LinearLayout>
        <!--
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                              android:layout_marginTop="16dp">
                    <TextView
                            android:text="Contraseña" android:layout_gravity="center"
                            android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                            android:textColor="@color/colorPrimary"/>
                    <EditText
                            android:id="@+id/m_ProfileData_password" android:hint="Contraseña"
                            android:layout_width="match_parent" android:layout_height="40dp" android:layout_marginStart="50dp"
                            android:background="@drawable/trans_rounded_white" android:layout_marginLeft="50dp"
                            android:inputType="textPassword" android:textSize="14sp"
                            android:paddingEnd="10dp" android:paddingStart="10dp"/>
                </LinearLayout>
        -->
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_marginTop="16dp">
            <TextView
                    android:text="Correo electronico  " android:layout_gravity="center"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                    android:textColor="@color/colorPrimary"/>
            <EditText
                    android:id="@+id/m_ProfileData_mail" android:hint="Correo electrónico"
                    android:layout_width="match_parent" android:layout_height="40dp"
                    android:background="@drawable/trans_rounded_white"
                    android:inputType="textEmailAddress" android:textSize="14sp"
                    android:paddingEnd="10dp" android:paddingStart="10dp"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_marginTop="16dp">
            <TextView
                    android:text="Descripción              " android:layout_gravity="center"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                    android:textColor="@color/colorPrimary"/>
            <!--<EditText
                    android:id="@+id/m_ProfileData_desc" android:hint="Descripción del perfil"
                    android:layout_width="match_parent" android:layout_height="80dp"
                    android:background="@drawable/trans_rounded_white2"
                    android:inputType="textEmailAddress" android:textSize="14sp"
                    android:paddingEnd="10dp" android:paddingStart="10dp"/>-->
            <EditText
                    android:id="@+id/m_ProfileData_desc" android:hint="Descripción del perfil"
                    android:layout_width="match_parent" android:layout_height="80dp"
                    android:background="@drawable/trans_rounded_white2"
                    android:layout_gravity="center"
                    android:drawablePadding="5dp"
                    android:maxLength="240"
                    android:ems="10"
                    android:gravity="top"
                    android:paddingTop="10dp"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:inputType="textMultiLine|text"
                    android:textSize="14sp"/>
        </LinearLayout>
        <TextView
                android:text="Datos personales"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView28"
                android:layout_marginTop="28dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
                android:textColor="@color/colorPrimary"/>

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_marginTop="16dp">
            <TextView
                    android:text="Nombre        " android:layout_gravity="center"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                    android:textColor="@color/colorPrimary"/>
            <EditText
                    android:id="@+id/m_ProfileData_firstname" android:hint="Nombre"
                    android:layout_width="match_parent" android:layout_height="40dp" android:layout_marginStart="50dp"
                    android:background="@drawable/trans_rounded_white" android:layout_marginLeft="50dp"
                    android:inputType="textPersonName" android:textSize="14sp"
                    android:paddingEnd="10dp" android:paddingStart="10dp"/>
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_marginTop="16dp">
            <TextView
                    android:text="Apellidos      " android:layout_gravity="center"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                    android:textColor="@color/colorPrimary"/>
            <EditText
                    android:id="@+id/m_ProfileData_lastname" android:hint="Apellidos"
                    android:layout_width="match_parent" android:layout_height="40dp" android:layout_marginStart="50dp"
                    android:background="@drawable/trans_rounded_white" android:layout_marginLeft="50dp"
                    android:inputType="textPersonName" android:textSize="14sp"
                    android:paddingEnd="10dp" android:paddingStart="10dp"/>
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_marginTop="16dp">
            <TextView
                    android:text="Fecha nacimiento    " android:layout_gravity="center"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                    android:textColor="@color/colorPrimary"/>
            <EditText
                    android:id="@+id/m_ProfileData_birthDate" android:hint="Fecha nacimiento"
                    android:layout_width="match_parent" android:layout_height="40dp"
                    android:background="@drawable/trans_rounded_white"
                    android:inputType="date" android:textSize="14sp"
                    android:paddingEnd="10dp" android:paddingStart="10dp"/>
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_marginTop="16dp">
            <TextView
                    android:text="Lugar de Residencia" android:layout_gravity="center"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                    android:textColor="@color/colorPrimary"/>
            <EditText
                    android:id="@+id/m_ProfileData_place" android:hint="Lugar de Residencia"
                    android:layout_width="match_parent" android:layout_height="40dp"
                    android:background="@drawable/trans_rounded_white"
                    android:inputType="textCapSentences" android:textSize="14sp"
                    android:paddingEnd="10dp" android:paddingStart="10dp"/>
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_marginTop="16dp">
            <TextView
                    android:text="Telefono      " android:layout_gravity="center"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                    android:textColor="@color/colorPrimary"/>
            <EditText
                    android:id="@+id/m_ProfileData_phone" android:hint="Telefono"
                    android:layout_width="match_parent" android:layout_height="40dp" android:layout_marginStart="50dp"
                    android:background="@drawable/trans_rounded_white" android:layout_marginLeft="50dp"
                    android:inputType="phone" android:textSize="14sp"
                    android:paddingEnd="10dp" android:paddingStart="10dp"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_marginTop="16dp">
            <TextView
                    android:text="DNI                " android:layout_gravity="center"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                    android:textColor="@color/colorPrimary"/>
            <EditText
                    android:id="@+id/m_ProfileData_IdentifiedCard" android:hint="DNI (sin letra)"
                    android:layout_width="match_parent" android:layout_height="40dp" android:layout_marginStart="50dp"
                    android:background="@drawable/trans_rounded_white" android:layout_marginLeft="50dp"
                    android:inputType="number" android:textSize="14sp"
                    android:paddingEnd="10dp" android:paddingStart="10dp"/>
        </LinearLayout>
        <TextView
                android:text="Mis categorías favoritas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
                android:textColor="@color/colorPrimary"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent" android:layout_marginTop="16dp"
                android:layout_height="wrap_content">
            <ImageView
                    android:id="@+id/m_ProfileData_button_addCategory" android:contentDescription="add"
                    android:layout_width="40dp" android:background="@drawable/layout_bg"
                    android:layout_height="40dp" app:srcCompat="@drawable/ic_add_black_24dp"
                    android:layout_marginStart="16dp" android:layout_marginLeft="16dp"
                    android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                    android:clickable="true"/>
            <HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                                  android:id="@+id/m_profile_menu_reference"
                                  android:layout_width="match_parent"
                                  android:layout_height="match_parent"
                                  android:layout_marginRight="16dp"
                                  android:fillViewport="true">
                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                              android:orientation="horizontal" android:layout_width="match_parent"
                              android:layout_height="match_parent">
                    <android.support.v7.widget.RecyclerView android:layout_width="wrap_content"
                                                            android:layout_height="wrap_content"
                                                            android:id="@+id/m_upload_categories"
                                                            android:orientation="horizontal">

                    </android.support.v7.widget.RecyclerView>
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
        <Button
                android:id="@+id/m_ProfileData_editarCampos"
                android:layout_width="149dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="28dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="38dp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/rounded_blue"
                android:layout_gravity="center"
                android:text="guardar cambios"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
        <TextView android:layout_width="match_parent" android:layout_height="match_parent" android:textSize="30sp"/>
    </LinearLayout>
</ScrollView>