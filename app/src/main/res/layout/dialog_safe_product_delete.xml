<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:background="@drawable/rounded_white"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp">
        <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/n_dspd_reasons"
                android:drawSelectorOnTop="true"
                android:entries="@array/reasons"
                android:spinnerMode="dialog"/>
        <TextView
                android:text="¿Algún otro motivo de interés?"
                android:layout_width="match_parent"
                android:paddingTop="10dp"
                android:layout_height="wrap_content" android:id="@+id/textView1" android:textSize="14sp"
                android:textStyle="bold"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/n_dspd_extra_reason"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:text="Cancelar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/n_dspd_cancelar"
                    android:layout_weight="3"
                    android:background="@drawable/rounded_blue"
                    android:textColor="@color/colorWhite"/>
            <RelativeLayout android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1"/>
            <Button
                    android:text="Eliminar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/n_dspd_delete"
                    android:layout_weight="3"
                    android:background="@drawable/rounded_red"
                    android:textColor="@color/colorWhite"/>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>