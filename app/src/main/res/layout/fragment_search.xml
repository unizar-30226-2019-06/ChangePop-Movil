<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/greyBack"
        android:layout_marginTop="50dp"
        tools:context=".MainActivity">
    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                  android:orientation="vertical">
        <EditText
                android:id="@+id/m_search_title"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/trans_rounded_white"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/ic_search_black_24dp"
                android:drawableLeft="@drawable/ic_search_black_24dp"
                android:drawableTint="@color/colorPrimary"
                android:ems="10"
                android:layout_gravity="center"
                android:hint="¿Qué estás buscando?"
                android:inputType="textPersonName"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:textSize="14sp"/>
        <TextView
                android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginTop="16dp"
                android:text="Filtros"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView3"
                android:textColor="@color/colorPrimary"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_gravity="center" android:layout_marginTop="16dp"
                android:layout_height="wrap_content">
            <EditText
                    android:id="@+id/m_search_category"
                    android:layout_width="229dp"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:focusable="false"
                    android:clickable="false"
                    android:hint="Categorias"
                    android:paddingEnd="15dp"
                    android:paddingStart="15dp"
                    android:textSize="14sp"
                    android:background="@drawable/rounded_white"
                    android:layout_weight="1"/>
            <Button
                    android:id="@+id/m_search_category_button"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:text="Elegir"
                    android:gravity="center"
                    android:layout_marginLeft="1dp"
                    android:layout_marginStart="1dp"
                    android:background="@drawable/rounded_white"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content">
            <EditText
                    android:id="@+id/m_search_priece_min"
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:background="@drawable/trans_rounded_white"
                    android:drawablePadding="5dp"
                    android:drawableStart="@drawable/ic_euro_symbol_black_24dp"
                    android:drawableLeft="@drawable/ic_euro_symbol_black_24dp"
                    android:drawableTint="#ff0000"
                    android:ems="10"
                    android:layout_gravity="center"
                    android:hint="Precio min"
                    android:inputType="number"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:textSize="14sp"/>
            <EditText
                    android:id="@+id/m_search_priece_max"
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:background="@drawable/trans_rounded_white"
                    android:drawablePadding="5dp"
                    android:drawableStart="@drawable/ic_euro_symbol_black_24dp"
                    android:drawableLeft="@drawable/ic_euro_symbol_black_24dp"
                    android:drawableTint="@color/colorPrimary"
                    android:ems="10"
                    android:layout_gravity="center"
                    android:hint="Precio max"
                    android:layout_marginStart="40dp"
                    android:layout_marginLeft="40dp"
                    android:inputType="number"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:textSize="14sp"/>
        </LinearLayout>

        <EditText
                android:id="@+id/m_search_descript"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/trans_rounded_white"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/ic_description_black_24dp"
                android:drawableLeft="@drawable/ic_description_black_24dp"
                android:drawableTint="@color/colorPrimary"
                android:ems="10"
                android:layout_gravity="center"
                android:hint="¿Algo descriptivo?"
                android:inputType="textPersonName"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:textSize="14sp"/>
        <EditText
                android:id="@+id/m_search_place"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/trans_rounded_white"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/ic_place_black_24dp"
                android:drawableLeft="@drawable/ic_place_black_24dp"
                android:drawableTint="@color/colorPrimary"
                android:ems="10"
                android:layout_gravity="center"
                android:hint="¿Dónde?"
                android:inputType="textPersonName"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:textSize="14sp"/>
        <Button
                android:id="@+id/m_button_search"
                android:text="Aplicar Búsqueda"
                android:layout_width="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:background="@drawable/rounded_blue" android:textColor="@color/colorWhite"
                android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>