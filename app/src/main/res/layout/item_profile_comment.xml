<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_white"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"

            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/m_comment_user"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Username" android:textSize="18sp" android:textStyle="bold"/>
        <!--
        <RatingBar
                android:id="@+id/m_comment_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:numStars="5" android:rating="4" android:isIndicator="false"/>
                -->
        <TextView
                android:id="@+id/m_comment_body"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Esto es un comentario"
                android:paddingTop="7dp"
                android:paddingLeft="20dp"/>
    </LinearLayout>
</FrameLayout>